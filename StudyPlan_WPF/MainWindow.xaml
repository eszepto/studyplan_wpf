<Window x:Class="StudyPlan_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudyPlan_WPF"
        mc:Ignorable="d"
        Title="Window1" Height="908.445" Width="976.139">
    <Grid Margin="4,0,-4.4,0">
        <ListBox x:Name="listBox1" HorizontalAlignment="Left" Height="347" VerticalAlignment="Top" Width="174" Margin="784,29,0,0" BorderBrush="#FF2052E8" />
        <TabControl x:Name="tabControl"  HorizontalAlignment="Left" Height="650" VerticalAlignment="Top" Width="546" Margin="33,202,0,0" ItemsSource="{Binding Semesters}" IsSynchronizedWithCurrentItem="True" >
            <TabControl.ItemContainerStyle>
                <Style TargetType="{x:Type TabItem}">
                    <Setter Property="Header" Value="{Binding Number}" />
                    <Setter Property="HeaderStringFormat" Value="Semester {0}" />
                </Style>
                
            </TabControl.ItemContainerStyle>
            
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <Grid>
                        <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="Auto" Width="546"  VerticalAlignment="Top" ItemsSource="{Binding Courses}" IsSynchronizedWithCurrentItem="True"  ItemTemplate="{StaticResource MainCourseStyle}"/>
                    </Grid>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
        <Button x:Name="Add_btn" Content="Add Semester" HorizontalAlignment="Left" Margin="33,88,0,0" VerticalAlignment="Top" Width="136" Click="Add_btn_Click" Height="53"/>
        <Button x:Name="DE_btn" Content="Delete Semester" HorizontalAlignment="Left" Margin="33,146,0,0" VerticalAlignment="Top" Width="136" Click="DE_btn_Click" Height="45"/>


    </Grid>
</Window>
