<Window x:Class="StudyPlan_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudyPlan_WPF"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="listBox1" HorizontalAlignment="Left" Height="347" VerticalAlignment="Top" Width="174" Margin="608,62,0,0" BorderBrush="#FF2052E8" />
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="193" VerticalAlignment="Top" Width="367" Margin="33,190,0,0" ItemsSource="{Binding CpreBachelor}">
            <TabControl.ItemContainerStyle>
                <Style TargetType="TabItem">
                    <Setter Property="Header" Value="{Binding Header}"/>
                </Style>
            </TabControl.ItemContainerStyle>

            <TabControl.ContentTemplate>
                <DataTemplate>
                    
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>


    </Grid>
</Window>
